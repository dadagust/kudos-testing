{
  "name": "staff",
  "version": "1.0.0",
  "packageManager": "pnpm@10.5.2",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev -p 3000 --hostname 0.0.0.0",
    "build": "next build",
    "start": "next start -p 3000",
    "lint": "pnpm run lint:eslint && pnpm run lint:styles",
    "lint:eslint": "eslint --max-warnings=0 . --ext .ts,.tsx",
    "lint:styles": "stylelint \"app/**/*.{sass}\" \"src/**/*.{sass}\" \"styles/**/*.sass\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,cjs,mjs,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install",
    "lint:staged": "lint-staged"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.45.0",
    "axios": "^1.7.2",
    "clsx": "^2.1.1",
    "next": "^14.2.5",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "1.77.6",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@types/node": "^20.12.7",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.13.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "postcss-sass": "^0.5.0",
    "prettier": "^3.3.2",
    "stylelint": "^16.6.1",
    "stylelint-config-standard-scss": "^13.1.0",
    "stylelint-order": "^6.0.4",
    "typescript": "^5.4.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{js,cjs,mjs,json,md}": [
      "prettier --write"
    ],
    "*.sass": [
      "stylelint --fix"
    ]
  }
}
